{
  "manifest_version": 2,
  "name": "Snowball - MH QoL",
  "version": "1",
  "description": "Translate the text from a message in several languages using Google Cloud Translation API.",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "*://myhordes.de/*",
    "*://myhordes.eu/*",
    "*://myhord.es/*",
    "*://myhordes.fr/*",
    "https://translation.googleapis.com/*"
  ],
  "web_accessible_resources": [
    "content.js",
    "service-worker.js",
    "snowballHud.html",
    "snowballIcon.html",
    "style.css",
    "img/arrowright.gif",
    "img/bgum.gif",
    "img/snowball.png"
  ],
  "background": {
    "page": "background.html"
  },
  "content_scripts": [{
    "matches": ["*://myhordes.eu/*"],
    "js": ["content.js"],
    "css": ["style.css"]
  }],
  "icons": {
    "16": "img/snowball.png",
    "48": "img/snowball_48.png",
    "128": "img/snowball_128.png"
  }
}
